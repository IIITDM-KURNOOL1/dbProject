<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base"
    tools:context="com.example.user.dbproject.EventInsertionClass">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD EVENT DETAILS"
        android:textSize="18sp"
        android:textColor="#000"
        android:id="@+id/tv2"
        android:layout_marginLeft="75dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:id="@+id/team_size"
        android:hint="Team Size..."
        android:layout_marginTop="20dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_name"
        android:layout_below="@+id/team_size"
        android:layout_marginTop="5dp"
        android:hint="Event name.."
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_below="@+id/event_name"
        android:layout_marginTop="5dp"
        android:hint="date.."
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/event_id"
        android:layout_below="@+id/date"
        android:layout_marginTop="5dp"
        android:hint="evnet id.."
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/venue"
        android:layout_below="@+id/event_id"
        android:layout_marginTop="5dp"
        android:hint="Venue.."
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Organizer"
        android:layout_below="@+id/venue"
        android:layout_marginTop="5dp"
        android:hint="Organizer name.."
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/level"
        android:layout_below="@+id/Organizer"
        android:layout_marginTop="5dp"
        android:hint="Level of the event.."
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/award_type"
        android:layout_below="@+id/level"
        android:layout_marginTop="5dp"
        android:hint="award tpye of the event.."
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/insertBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"
        android:text="insert"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="add Student Type"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:id="@+id/eventtotype"
        />


</RelativeLayout>
