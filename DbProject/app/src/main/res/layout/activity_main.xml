<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base"
    tools:context="com.example.user.dbproject.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTER STUDENT DETAILS"
        android:layout_marginLeft="75dp"
        android:textSize="18sp"
        android:id="@+id/tv1"
        android:textColor="#000"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="10dp"
        android:id="@+id/editName"
        android:hint="Type a name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_mname"
        android:hint="Type their middle name"
        android:layout_below="@+id/editName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_lname"
        android:hint="Type their last name"
        android:layout_below="@+id/edit_mname"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_rollno"
        android:hint="Type their Roll Number"
        android:layout_below="@+id/edit_lname"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_sex"
        android:hint="Type their Sex(M/F)"
        android:layout_below="@+id/edit_rollno"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_dob"
        android:hint="Type their dateofbirth"
        android:layout_below="@+id/edit_sex"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_dno"
        android:hint="Type their Department Number"
        android:layout_below="@+id/edit_dob"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_useno"
        android:hint="Type their usernumber"
        android:layout_below="@+id/edit_dno"
        />




    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="INSERT"
        android:id="@+id/btnInsert"
        android:elevation="4dp"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventBtn"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="add event details"
        />



